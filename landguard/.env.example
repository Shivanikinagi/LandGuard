# LandGuard Environment Variables
# Copy this file to .env and customize for your environment

# ============================================
# Fraud Detection Configuration
# ============================================

# Number of days to check for rapid transfers
LANDGUARD_RAPID_TRANSFER_DAYS=180

# Minimum transfers to flag as rapid
LANDGUARD_RAPID_TRANSFER_COUNT=2

# Threshold for large transfer detection (in currency units)
LANDGUARD_LARGE_TRANSFER_THRESHOLD=10000000

# Name similarity threshold (0-100)
LANDGUARD_NAME_SIMILARITY_THRESHOLD=85

# Days tolerance for date order conflicts
LANDGUARD_DATE_ORDER_TOLERANCE_DAYS=1

# ============================================
# Output Configuration
# ============================================

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LANDGUARD_LOG_LEVEL=INFO

# Output format: json, text, csv
LANDGUARD_OUTPUT_FORMAT=json

# Enable verbose output: true, false
LANDGUARD_ENABLE_VERBOSE=false

# ============================================
# File Paths (Optional)
# ============================================

# Custom configuration file path
# LANDGUARD_CONFIG_PATH=/path/to/custom/config.yaml

# Output directory for reports
# LANDGUARD_OUTPUT_DIR=/path/to/output

# ============================================
# Performance Settings (Optional)
# ============================================

# Batch processing size
# LANDGUARD_BATCH_SIZE=100

# Maximum worker threads
# LANDGUARD_MAX_WORKERS=4

# ============================================
# Development Settings
# ============================================

# Enable debug mode
# LANDGUARD_DEBUG=false

# Enable profiling
# LANDGUARD_ENABLE_PROFILING=false