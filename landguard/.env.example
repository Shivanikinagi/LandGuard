# Environment Configuration for Pied Piper 2.0
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://piedpiper:changeme@localhost:5432/landguard
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Generate a secure random key for production:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change_this_to_a_random_secret_key_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# BLOCKCHAIN CONFIGURATION (Optional)
# =============================================================================
# Polygon Amoy Testnet RPC URL
BLOCKCHAIN_RPC_URL=https://rpc-amoy.polygon.technology
# Your deployed smart contract address
CONTRACT_ADDRESS=
# Your wallet private key (WITHOUT 0x prefix)
# WARNING: Never commit this to version control!
PRIVATE_KEY=

# =============================================================================
# IPFS / PINATA CONFIGURATION
# =============================================================================
# Get your API keys from: https://pinata.cloud/
PINATA_API_KEY=your_pinata_api_key_here
PINATA_SECRET_KEY=your_pinata_secret_key_here
PINATA_JWT=your_pinata_jwt_token_here

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8001

# Comma-separated list of allowed origins for CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Maximum file size in bytes (default: 100MB)
MAX_FILE_SIZE=100000000

# Compression level (1-9, higher = better compression but slower)
COMPRESSION_LEVEL=9

# Enable/disable IPFS upload
ENABLE_IPFS=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/landguard.log

# =============================================================================
# PRODUCTION SETTINGS (uncomment for production)
# =============================================================================
# ENVIRONMENT=production
# DEBUG=false
# SECURE_COOKIES=true
# FORCE_HTTPS=true
